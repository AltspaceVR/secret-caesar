{
  "name": "secret-hitler",
  "version": "1.0.0",
  "description": "The new board game, adapted for VR.",
  "main": "index.js",
  "scripts": {
    "start": "node src/server/app.js",
    "start-dev": "nodemon -w src/server/ src/server/app.js",
    "build": "rollup -c",
    "build-dev": "rollup -w -c",
    "build-common": "rollup -c rollup.common.js",
    "build-spec": "rollup -c rollup.spec.js",
    "build-and-run-test": "rollup -c spec/support/rollup.specs.js && jasmine",
    "test": "nodemon --quiet --ignore spec/index.es5.js --exec npm run build-and-run-test"
  },
  "author": "Steven Vergenz",
  "license": "CC-BY-NC-SA-4.0",
  "devDependencies": {
    "jasmine": "^2.6.0",
    "nodemon": "^1.11.0",
    "rollup": "^0.36.3",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-buble": "^0.14.0",
    "rollup-watch": "^2.5.0"
  },
  "dependencies": {
    "bluebird": "^3.4.6",
    "express": "^4.14.0",
    "mustache": "^2.3.0",
    "path-to-regexp": "^1.7.0",
    "redis": "^2.6.3",
    "socket.io": "^1.7.4"
  }
}
